<!DOCTYPE html>
<html lang="fr">
  <%- include('partials/head') -%>

  <body>
    <%- include('partials/header') -%>

    <div id="Institution">
      <div class="fr-container">
        <div class="fr-grid-row fr-grid-row--gutters">
          <div class="fr-col-3 fr-mb-4w fr-mt-6w">
            <% if (ministry.logoUrl.length) { %>
              <img src="<%= ministry.logoUrl %>" class="fr-responsive-img" alt="<%= ministry.title %>" >
            <% } %>
          </div>
          <div class="fr-col-7 fr-mb-4w fr-mt-8w fr-ml-2w">
            <h1><%= ministry.title %></h1>
            <p><%= ministry.fullName %></p>
          </div>
        </div>

        <% if (ministry.motivation || ministry.motivationFiles && ministry.motivationFiles.length) { %>
          <div class="fr-callout fr-px-0 fr-my-2w">
            <div class="fr-grid-row fr-grid-row--gutters">
              <div class="fr-col-sm-12 fr-px-8w">
                <h5>Raison d‘être</h5>

                <% if (ministry.motivation) { %>
                  <%- ministry.motivation %>
                <% } %>

                <% if (ministry.motivationFiles && ministry.motivationFiles.length) { %>
                  <div class="FileSection">
                    <% ministry.motivationFiles.forEach(function(motivationFile) { %>
                      <%- motivationFile %>
                    <% }); %>
                  </div>
                <% } %>
              </div>
            </div>
          </div>
        <% } %>

        <div id="Institution-main-fields" class="fr-my-4w">
          <% if (ministry.value || ministry.valueFiles && ministry.valueFiles.length) { %>
            <div class="fr-grid-row fr-grid-row--gutters">
              <div class="fr-col-md-3 fr-col-sm-12">
                <h3>Valeurs</h3>
              </div>
              <div class="fr-col-md-9 fr-col-sm-12 fr-mb-4w">
                <% if (ministry.value) { %>
                  <%- ministry.value %>
                <% } %>

                <% if (ministry.valueFiles && ministry.valueFiles.length) { %>
                  <div class="FileSection">
                    <% ministry.valueFiles.forEach(function(valueFile) { %>
                      <%- valueFile %>
                    <% }); %>
                  </div>
                <% } %>
              </div>
            </div>
          <% } %>

          <% if (ministry.challenges) { %>
            <div class="fr-grid-row fr-grid-row--gutters">
              <div class="fr-col-md-3 fr-col-sm-12">
                <h3>Nos enjeux</h3>
              </div>
              <div class="fr-col-md-9 fr-col-sm-12">
                <%- ministry.challenges %>
              </div>
            </div>
          <% } %>

          <% if (ministry.missions) { %>
            <div class="fr-grid-row fr-grid-row--gutters">
              <div class="fr-col-md-3 fr-col-sm-12">
              <h3>Missions</h3>
              </div>
              <div class="fr-col-md-9 fr-col-sm-12">
                <%- ministry.missions %>
              </div>
            </div>
          <% } %>

          <% if (ministry.project || ministry.projectFiles && ministry.projectFiles.length) { %>
            <div class="fr-grid-row fr-grid-row--gutters">
              <div class="fr-col-md-3 fr-col-sm-12">
                <h3>Projets</h3>
              </div>
              <div class="fr-col-md-9 fr-col-sm-12 fr-mb-4w">
                <% if (ministry.project) { %>
                  <%- ministry.project %>
                <% } %>

                <% if (ministry.projectFiles && ministry.projectFiles.length) { %>
                  <div class="FileSection">
                    <% ministry.projectFiles.forEach(function(projectFile) { %>
                      <%- projectFile %>
                    <% }); %>
                  </div>
                <% } %>
              </div>
            </div>
          <% } %>

          <% if (ministry.organization || ministry.organizationFiles && ministry.organizationFiles.length) { %>
            <div class="fr-grid-row fr-grid-row--gutters">
              <div class="fr-col-md-3 fr-col-sm-12">
                <h3>Notre organisation</h3>
              </div>
              <div class="fr-col-md-9 fr-col-sm-12 fr-mb-6w">
                <% if (ministry.organization) { %>
                  <%- ministry.organization %>
                <% } %>

                <% if (ministry.organizationFiles && ministry.organizationFiles.length) { %>
                  <div class="FileSection">
                    <% ministry.organizationFiles.forEach(function(organizationFile) { %>
                      <%- organizationFile %>
                    <% }); %>
                  </div>
                <% } %>
              </div>
            </div>
          <% } %>

          <% if (ministry.testimonial || ministry.testimonialFiles && ministry.testimonialFiles.length) { %>
            <div class="fr-grid-row fr-grid-row--gutters">
              <div class="fr-col-md-3 fr-col-sm-12">
                <h3>Nos agents en parlent</h3>
              </div>
              <div class="fr-col-md-9 fr-col-sm-12 fr-mb-4w">
                <p>Découvrez le témoignage de nos agents:</p>

                <% if (ministry.testimonial) { %>
                  <%- ministry.testimonial %>
                <% } %>

                <% if (ministry.testimonialFiles && ministry.testimonialFiles.length) { %>
                  <div class="FileSection">
                    <% ministry.testimonialFiles.forEach(function(testimonialsFile) { %>
                      <%- testimonialsFile %>
                    <% }); %>
                  </div>
                <% } %>
              </div>
            </div>
          <% } %>

          <% if (ministry.profile) { %>
            <div class="fr-grid-row fr-grid-row--gutters">
              <div class="fr-col-md-3 fr-col-sm-12">
                <h3>Ton profil</h3>
              </div>
              <div class="fr-col-md-9 fr-col-sm-12 fr-mb-4w">
                <%- ministry.profile %>
              </div>
            </div>
          <% } %>

          <% if (ministry.hiringProcess) { %>
            <div class="fr-grid-row fr-grid-row--gutters">
              <div class="fr-col-md-3 fr-col-sm-12">
                <h3>Processus de recrutement</h3>
              </div>
              <div class="fr-col-md-9 fr-col-sm-12 fr-mb-4w">
                <%- ministry.hiringProcess %>
              </div>
            </div>
          <% } %>

          <% if (ministry.joinTeam || ministry.joinTeamFiles && ministry.joinTeamFiles.length) { %>
            <div class="fr-grid-row fr-grid-row--gutters">
              <div class="fr-col-md-3 fr-col-sm-12">
                <h3>Nous rejoindre</h3>
              </div>
              <div class="fr-col-md-9 fr-col-sm-12 fr-mb-4w">
                <% if (ministry.joinTeam) { %>
                  <%- ministry.joinTeam %>
                <% } %>

                <% if (ministry.joinTeamFiles && ministry.joinTeamFiles.length) { %>
                  <div class="FileSection">
                    <% ministry.joinTeamFiles.forEach(function(joinTeamFile) { %>
                      <%- joinTeamFile %>
                    <% }); %>
                  </div>
                <% } %>

                <!--<a href="#" class="fr-btn fr-btn--sm">
                  Découvrez nos offres d'emploi
                  <span class="fr-fi-arrow-right-line fr-pl-1w" aria-hidden="true"></span>
                </a>-->
              </div>
            </div>
          <% } %>
        </div>
      </div>

      <div class="fr-container fr-py-4w" style="background-color: #F0F0F0">
        <% if (ministry.keyNumbers) { %>
          <div class="fr-grid-row fr-grid-row--gutters">
            <div class="fr-col-md-3 fr-col-sm-12">
              <h5>Chiffres clés</h5>
            </div>
            <div class="fr-col-md-9 fr-col-sm-12 fr-mb-4w">
              <%- ministry.keyNumbers %>
            </div>
          </div>
        <% } %>

        <% if (ministry.schedule) { %>
          <div class="fr-grid-row fr-grid-row--gutters">
            <div class="fr-col-md-3 fr-col-sm-12">
              <h5>Agenda</h5>
            </div>
            <div class="fr-col-md-9 fr-col-sm-12 fr-mb-4w">
              <%- ministry.schedule %>
            </div>
          </div>
        <% } %>

        <%
          if (
            ministry.websiteFiles && ministry.websiteFiles.length
            || ministry.socialNetworkUrls && ministry.socialNetworkUrls.length
          ) {
        %>
          <div class="fr-grid-row fr-grid-row--gutters">
            <div class="fr-col-md-3 fr-col-sm-12">
              <h5>Sites & réseaux</h5>
            </div>
            <div class="fr-col-md-9 fr-col-sm-12">
              <% if (ministry.websiteFiles && ministry.websiteFiles.length) { %>
                <ul>
                  <% ministry.websiteFiles.forEach(function(websiteFile) { %>
                    <li>
                      <a href="<%= websiteFile.external.url %>" target="_blank"><%= websiteFile.name %></a>
                    </li>
                  <% }); %>
                </ul>
              <% } %>

              <% if (ministry.socialNetworkUrls && ministry.socialNetworkUrls.length) { %>
                <p class="SocialNetworkParagraph">
                  <% ministry.socialNetworkUrls.forEach(function(socialNetworkUrl) { %>
                    <% if (socialNetworkUrl.search('linkedin.com') !== -1) { %>
                      <a href="<%= socialNetworkUrl %>" target="_blank">
                        <i class="ri-linkedin-fill"></i>
                      </a>
                    <% } else if (socialNetworkUrl.search('twitter.com') !== -1) { %>
                      <a href="<%= socialNetworkUrl %>" target="_blank">
                        <i class="ri-twitter-fill"></i>
                      </a>
                    <% } else if (socialNetworkUrl.search('facebook.com') !== -1) { %>
                      <a href="<%= socialNetworkUrl %>" target="_blank">
                        <i class="ri-facebook-fill"></i>
                      </a>
                    <% } else if (socialNetworkUrl.search('instagram.com') !== -1) { %>
                      <a href="<%= socialNetworkUrl %>" target="_blank">
                        <i class="ri-instagram-fill"></i>
                      </a>
                    <% } else if (socialNetworkUrl.search('youtube.com') !== -1) { %>
                      <a href="<%= socialNetworkUrl %>" target="_blank" style="padding-top: 0.25rem;">
                        <i class="ri-youtube-fill"></i>
                      </a>
                    <% } else if (socialNetworkUrl.search('github.com') !== -1) { %>
                      <a href="<%= socialNetworkUrl %>" target="_blank">
                        <i class="ri-github-fill"></i>
                      </a>
                    <% } else if (socialNetworkUrl.search('dailymotion.com') !== -1) { %>
                      <a href="<%= socialNetworkUrl %>" target="_blank">
                        <img src="/static/icons/dailymotion.svg" />
                      </a>
                    <% } else if (socialNetworkUrl.search('soundcloud.com') !== -1) { %>
                      <a href="<%= socialNetworkUrl %>" target="_blank">
                        <i class="ri-soundcloud-fill"></i>
                      </a>
                    <% } else { %>
                      <a href="<%= socialNetworkUrl %>" target="_blank">
                        <%= socialNetworkUrl %>
                      </a>
                    <% } %>
                  <% }); %>
                </p>
              <% } %>
            </div>
          </div>
        <% } %>

        <% if (ministry.address || ministry.addressFiles && ministry.addressFiles.length) { %>
          <div class="fr-grid-row fr-grid-row--gutters">
            <div class="fr-col-md-3 fr-col-sm-12">
              <h5>Adresses</h5>
            </div>
            <div class="fr-col-md-9 fr-col-sm-12">
              <% if (ministry.address) { %>
                <%- ministry.address %>
              <% } %>

              <% if (ministry.addressFiles && ministry.addressFiles.length) { %>
                <div>
                  <% ministry.addressFiles.forEach(function(addressFile) { %>
                    <% if (addressFile.name.search('google.com') != -1) { %>
                      <a href="<%= addressFile.name %>" target="_blank">Voir sur Google maps</a>
                    <% } else { %>
                      <% if (addressFile.name.search('.jpg') != -1 ) { %>
                        <a href="<%= addressFile.file.url %>" target="_blank">
                          <img class="fr-col-2 fr-mt-6w" src="<%= addressFile.file.url %>" alt="<%= addressFile.name %>">
                        </a>
                      <% } %>
                    <% } %>
                  <% }); %>
                </div>
              <% } %>
            </div>
          </div>
        <% } %>
      </div>
    </div>

    <%- include('partials/footer') -%>
  </body>
</html>
