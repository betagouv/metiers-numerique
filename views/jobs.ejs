<%- include('partials/header') -%>
  <div id="offres-de-mission" class="fr-container fr-mt-4w">
      <div class="fr-px-2w fr-px-md-6w">
              <div class="fr-grid-row">
                  <% for (let i=0; i < jobs.length; i++) { %>
                    <div class="fr-col-12 fr-col-md-12 fr-px-2w fr-py-2w">
                      <div class="fr-card fr-card--horizontal fr-card--no-arrow shadow-lg rounded-lg zoomable fr-enlarge-link">
                        <div class="fr-card__body">
                          <div class="fr-grid-row fr-grid-row--gutters">
                            <div class="fr-col-md-3 fr-col-sm-12">
                              <% if (jobs[i].ministry.slice(0,70)) { %>
                                <div class="fr-mb-2w fr-mt-1w">
                                  <%= jobs[i].ministry.slice(0,70) %>
                                </div>
                              <% } %>
                              <% if (jobs[i].readablePublicationDate) { %>
                                <div class="fr-my-2w">
                                  <span>
                                    <i class="fr-fi-calendar-line"></i>
                                  </span>
                                  <%= jobs[i].readablePublicationDate %>
                                </div>
                              <% } %>
                              <% if (jobs[i].location) { %>
                                <div class="fr-my-2w">
                                  <span>
                                    <i class="ri-map-pin-line"></i>
                                  </span>
                                  <%= jobs[i].location %>
                                </div>
                                <% } %>
                            </div>
                            <div class="fr-col-md-9 fr-col-sm-12">
                                <h4 class="fr-card__lead">
                                  <a href="/annonces/<%=jobs[i].slug%>" class="fr-card__link">
                                    <%=jobs[i].title%>
                                  </a>
                                </h4>
                                <p class="fr-card__desc" style="
                                  overflow: hidden;
                                  text-overflow: ellipsis;
                                  display: -webkit-box;
                                  -webkit-line-clamp: 3; /* number of lines to show */
                                  -webkit-box-orient: vertical;">
                                  <%- (jobs[i].mission || jobs[i].tasks[0] || '').replace(/\n/g, '<br>')%>
                                </p>
                                <ul class="fr-tags-group">
                                  <% jobs[i].experiences.forEach(function(experience) { %>
                                    <a href="#" class="fr-tag fr-tag--sm"><%= experience %></a>
                                  <% }); %>
                                  <% if (jobs[i].openTo.length) { %>
                                  <a href="#" class="fr-tag fr-tag--sm">
                                    <%= jobs[i].openTo.join(', ') %>
                                  </a>
                                  <% } %>
                                </ul>
                              </div>
                            </div>
                          <div
                          style="display: flex; justify-content: end; align-items: center;">
                          <a href="/annonces/<%= jobs[i].slug %>"
                            class="fr-btn fr-btn--sm">Lire l'offre d'emploi
                             <span class="fr-fi-arrow-right-line fr-pl-1w" aria-hidden="true"></span>
                          </a>
                        </div>
                        </div>
                      </div>
                    </div>
                    <% } %>
              </div>
      </div>
  </div>
  <br>
  <br>
  <%- include('partials/footer') -%>
