<%- include('partials/header') -%>
  <div id="offres-de-mission" class="fr-container fr-mt-4w">
      <div class="fr-px-2w fr-px-md-6w">
            <div class="fr-container">
              <div class="fr-grid-row">
                  <% for (let i=0; i < jobs.length; i++) { %>
                    <div class="fr-col-12 fr-col-md-12 fr-px-2w fr-py-2w">
                      <div class="fr-card fr-card--horizontal fr-card--no-arrow shadow-lg rounded-lg zoomable fr-enlarge-link">
                        <div class="fr-card__body">
                          <div class="fr-grid-row fr-grid-row--gutters">
                            <div class="fr-col-3">
                              <% if (jobs[i].ministry.slice(0,70)) { %>
                                <p>
                                  <%= jobs[i].ministry.slice(0,70) %>
                                </p>
                              <% } %>
                              <% if (jobs[i].location) { %>
                                <p>
                                  <span>
                                    <i class="ri-map-pin-line"></i>
                                  </span>
                                  <%= jobs[i].location %>
                                </p>
                                <% } %>
                              <% if (jobs[i].publicationDate) { %>
                                <p>
                                  <span>
                                    <i class="fr-fi-calendar-line"></i>
                                  </span>
                                  <%= jobs[i].publicationDate %>
                                </p>
                                <% } %>
                            </div>
                            <div class="fr-col-9">
                                <h4 class="fr-card__lead">
                                  <a href="/annonces/<%=jobs[i].slug%>" class="fr-card__link">
                                    <%=jobs[i].title%>
                                  </a>
                                </h4>
                                <p class="fr-card__desc">
                                  <%- jobs[i].mission.slice(0,200).replace(/\n/g, '<br>')%> ...
                                </p>
                                <ul class="fr-tags-group">
                                  <% jobs[i].experiences.forEach(function(experience) { %>
                                    <p class="fr-tag"><%= experience %></p>
                                  <% }); %>
                                  <p class="fr-tag">
                                    <%= jobs[i].openTo.join(', ') %>
                                  </p>
                                </ul>
                              </div>
                            </div>
                          <div
                          style="display: flex; justify-content: end; align-items: center;">
                          <a href="/annonces/<%= jobs[i].slug %>"
                            class="fr-btn fr-btn--sm">Lire l'offre d'emploi
                          </a>
                        </div>
                        </div>
                      </div>
                    </div>
                    <% } %>
              </div>
          </div>
      </div>
  </div>
  <br>
  <br>
  <%- include('partials/footer') -%>
