{
  "extends": "@ivangabriele/eslint-config-base",
  "env": {
    "browser": false,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 2021
  },
  "ignorePatterns": [
    "src/jobs/**/*.js",
    "!src/jobs/controllers/*.js",
    "!src/jobs/index.js",
    "!src/jobs/jobs.controller.js",
    "!src/jobs/jobs.routes.js",
    "src/schedulers/**/*.js",
    "src/shared/**/*.js",
    "static/scripts/*.js"
  ],
  "rules": {
    "no-console": "off",
    "no-new": "off",
    "no-plusplus": "off",
    "no-restricted-syntax": "off",
    "no-underscore-dangle": "off"
  },
  "overrides": [
    {
      "files": ["./static/**/*.js"],
      "env": {
        "browser": true,
        "node": false
      }
    },
    {
      "files": ["**/*.test.js"],
      "env": {
        "jest": true
      }
    }
  ]
}
