{
  "extends": "@ivangabriele/eslint-config-base",
  "env": {
    "browser": false,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 2021
  },
  "ignorePatterns": ["/.next/", "/build/", "/public/js/", "/public/index.bundle.js", "next-env.d.ts"],
  "rules": {
    "class-methods-use-this": "off",
    "consistent-return": "off",
    "no-new": "off",
    "no-plusplus": "off",
    "no-restricted-syntax": "off",
    "no-underscore-dangle": "off"
  },
  "overrides": [
    {
      "files": [
        "./api/**/*.ts",
        "./app/**/*.ts",
        "./app/**/*.tsx",
        "./pages/**/*.ts",
        "./pages/**/*.tsx",
        "./src/**/*.ts"
      ],
      "extends": "@ivangabriele/eslint-config-typescript-react",
      "parserOptions": {
        "ecmaVersion": 2021,
        "project": "./tsconfig.json"
      },
      "rules": {
        "class-methods-use-this": "off",
        "consistent-return": "off",
        "no-new": "off",
        "no-plusplus": "off",
        "no-restricted-syntax": "off",
        "no-underscore-dangle": "off",

        "react/function-component-definition": "off",
        "react/prop-types": [
          "error",
          {
            "ignore": ["children", "className", "Component", "pageProps"]
          }
        ],
        "react/react-in-jsx-scope": "off",

        "@typescript-eslint/lines-between-class-members": ["error", "always", { "exceptAfterSingleLine": true }],
        "@typescript-eslint/no-shadow": "off"
      }
    },
    {
      "files": ["./public/**/*.js"],
      "env": {
        "browser": true,
        "node": false
      }
    },
    {
      "files": ["**/*.test.js", "**/*.test.ts", "jest.setup.js"],
      "env": {
        "jest": true
      }
    },
    {
      "files": ["**/__tests__/**/*.ts"],
      "parserOptions": {
        "project": "./tsconfig.test.json"
      }
    }
  ]
}
