{
  "name": "metiers-numeriques",
  "description": "Tout savoir sur les métiers du numérique au sein de l’Etat",
  "version": "1.0.0",
  "license": "MIT",
  "engines": {
    "node": "16",
    "npm": "7"
  },
  "scripts": {
    "build": "yarn build:assets && yarn build:server && yarn build:sitemap",
    "build:assets": "rm -Rf ./static/assets && rollup -c && rm -f ./static/index.js",
    "build:server": "rm -Rf ./build && tsc",
    "build:sitemap": "node -r dotenv/config -r ts-node/register ./src/scripts/generateSitemap.ts",
    "postbuild": "yarn cache:purge && yarn cache:update",
    "checkHTML": "site-validator --verbose --url",
    "checkHTMLLocal": "site-validator --verbose --local --url http://localhost:8080",
    "cache:purge": "node -r dotenv/config ./scripts/purgeRedisCache.js",
    "cache:update": "node -r dotenv/config ./build/scripts/runCacheUpdate.js",
    "dev": "concurrently \"yarn dev:assets\" \"yarn dev:server\"",
    "dev:assets": "yarn build:assets && rollup -cw",
    "dev:server": "nodemon --ext js,json,ts --exec \"yarn start:dev\" --watch ./src",
    "dev:docker": "docker-compose down && docker-compose up -d cache",
    "dev:job:skb": "node -r dotenv/config -r ts-node/register ./src/scripts/runSkbJobsUpdate.ts",
    "dev:notion:guess": "node -r dotenv/config -r ts-node/register ./src/scripts/guessNotionDabaseType.ts",
    "prepare": "husky install",
    "start": "node -r dotenv/config ./build/index.js",
    "start:dev": "node -r dotenv/config -r ts-node/register ./src/index.ts",
    "start:worker:cache": "node -r dotenv/config ./build/workers/cacheUpdater.js",
    "start:worker:data": "node -r dotenv/config ./build/workers/dataUpdater.js",
    "test": "yarn test:unit && yarn test:integration",
    "test:build": "yarn build:assets && yarn build:server",
    "test:lint": "eslint --ext js,ts .",
    "test:e2e": "jest --config=./config/jest.e2e.config.js",
    "test:integration": "jest --config=./config/jest.integration.config.js",
    "test:unit": "jest --config=./config/jest.config.js",
    "test:unit:watch": "jest --watchAll --config=./config/jest.config.js"
  },
  "dependencies": {
    "@gouvfr/dsfr": "1.0.0-rc1.0",
    "axios": "0.21.4",
    "bhala": "1.0.2",
    "cron": "1.8.2",
    "csvtojson": "2.0.10",
    "date-fns": "2.25.0",
    "date-fns-tz": "1.1.6",
    "dayjs": "1.10.7",
    "dotenv": "10.0.0",
    "ejs": "3.1.5",
    "express": "4.17.1",
    "fuse.js": "6.4.6",
    "markdown-it": "12.2.0",
    "moment": "2.29.1",
    "object-hash": "2.2.0",
    "ramda": "0.27.1",
    "redis": "4.0.0",
    "remixicon": "2.5.0",
    "string-strip-html": "8.3.0",
    "xlsx": "0.17.4"
  },
  "devDependencies": {
    "@ivangabriele/commitlint-config": "1.0.2",
    "@ivangabriele/eslint-config-base": "2.0.0",
    "@ivangabriele/eslint-config-typescript-base": "2.1.4",
    "@ivangabriele/prettier-config": "2.0.1",
    "@rollup/plugin-node-resolve": "13.0.6",
    "@rollup/plugin-replace": "3.0.0",
    "@tsconfig/node16": "1.0.2",
    "@types/cron": "1.7.3",
    "@types/express": "4.17.13",
    "@types/jest": "27.0.3",
    "@types/markdown-it": "12.2.3",
    "@types/node": "16.11.11",
    "@types/object-hash": "2.2.1",
    "@types/ramda": "0.27.58",
    "concurrently": "6.4.0",
    "husky": "7.0.4",
    "jest": "27.4.0",
    "nodemon": "2.0.15",
    "postcss": "8.4.4",
    "rollup": "2.60.2",
    "rollup-plugin-postcss": "4.0.2",
    "rollup-plugin-styles": "3.14.1",
    "sitemap": "7.0.0",
    "ts-jest": "27.0.7",
    "ts-node": "10.4.0",
    "typescript": "4.5.2"
  },
  "prettier": "@ivangabriele/prettier-config",
  "bugs": {
    "url": "https://github.com/betagouv/metiers-numeriques/issues"
  },
  "homepage": "https://github.com/betagouv/metiers-numeriques#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/betagouv/metiers-numeriques.git"
  }
}
