{
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "noImplicitAny": false,
    "outDir": "./build",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": false,
    "strictNullChecks": true,
    "target": "es5"
  },
  "exclude": ["./scripts/*", "./node_modules/*", "**/__tests__/*"],
  "include": [
    "./api/**/*.ts",
    "./app/**/*.ts",
    "./app/**/*.tsx",
    "./src/**/*.js",
    "./src/**/*.ts",
    "./pages/**/*.ts",
    "./pages/**/*.tsx",
    "next-env.d.ts"
  ]
}
