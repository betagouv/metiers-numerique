{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "noImplicitAny": false,
    "paths": {
      "@api/*": ["api/*"],
      "@app/*": ["app/*"],
      "@common/*": ["common/*"],
      "@legacy/*": ["src/*"]
    },
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": false,
    "strictNullChecks": true,
    "target": "es5"
  },
  "exclude": ["./node_modules/*"],
  "include": [
    "./api/**/*.ts",
    "./app/**/*.ts",
    "./app/**/*.tsx",
    "./common/**/*.ts",
    "./config/**/*.ts",
    "./e2e/**/*.ts",
    "./src/**/*.js",
    "./src/**/*.ts",
    "./pages/**/*.ts",
    "./pages/**/*.tsx",
    "./scripts/**/*.js",
    "./scripts/**/*.ts",
    "next-env.d.ts"
  ],
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    },
    "transpiler": "ts-node/transpilers/swc-experimental",
    "transpileOnly": true
  }
}
