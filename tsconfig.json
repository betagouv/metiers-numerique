{
  "extends": "@ivangabriele/tsconfig-next",
  "compilerOptions": {
    "baseUrl": ".",
    "incremental": true,
    "isolatedModules": true,
    "paths": {
      "@api/*": ["api/*"],
      "@app/*": ["app/*"],
      "@common/*": ["common/*"]
    }
  },
  "exclude": [".next/*", "node_modules/*"],
  "include": ["**/*.js", "**/*.mjs", "**/*.ts", "**/*.tsx", "next-env.d.ts"],
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    },
    "transpiler": "ts-node/transpilers/swc-experimental",
    "transpileOnly": true
  }
}
